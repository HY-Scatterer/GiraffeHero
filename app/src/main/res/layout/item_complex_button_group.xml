<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp">

    <com.zoopark.demo.complex.views.SquareButton
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_primary_16"
        android:text="@string/complex_button_add"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.zoopark.demo.complex.views.SquareButton
        android:id="@+id/btn_remove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:background="@drawable/bg_primary_16"
        android:text="@string/complex_button_remove"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.zoopark.demo.complex.views.SquareButton
        android:id="@+id/btn_change"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_primary_16"
        android:text="@string/complex_button_change"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

</LinearLayout>